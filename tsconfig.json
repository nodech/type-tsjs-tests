{
  "include": [
    "lib/**/*.js"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],

    "emitDeclarationOnly": true,
    "declaration": true,

    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 10,

    "module": "commonjs",
    "moduleResolution": "node",

    "stripInternal": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  }
}
